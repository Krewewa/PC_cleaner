<UserControl x:Class="P1_PCleaner.View.NotFoundView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:P1_PCleaner.View"
      mc:Ignorable="d"
       d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10 0 10 0" Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource NotFound}" HorizontalAlignment="Center" Text="404"/>
            <TextBlock Style="{StaticResource NotFound}" Text="Страница не найдена"/>
        </StackPanel>
    </Border>
</UserControl>
